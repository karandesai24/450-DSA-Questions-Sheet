#include <iostream>


using namespace std;


int main()


{
   
int n;
   
cout<<"Enter size of an array: ";
  
 cin>>n;
   
 
  int a[n],i,max,min;
   

   for(i=0;i<n;++i)
     
 cin>>a[i];
   
 
    max=min=a[0];
    

    for(i=0;i<n;++i)
   
 {

        if(min>a[i])
  
        min=a[i];
   
 }
   
 
  for(i=0;i<n;++i)
 
   {

        if(max<a[i])
       
    max=a[i];
    
}
    
cout<<"Minimum num is: "<<min;
 
   cout<<"\nMaximum num is: "<<max;
    
  
  return 0;
  
 
}
